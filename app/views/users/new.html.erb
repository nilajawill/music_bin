<div class="well col-xs-8 col-xs-offset-2">
<h1 align="center">Sign Up</h1>
<hr>

<% if @user.errors.any? %>
 <div class="row">
  <div class="col-xs-8 col-xs-offset-2">
   <div class="panel panel-danger">
    <div class="panel-heading">
     <h2 class="panel-title">
      Whoops! You have <%= pluralize(@user.errors.count, "error") %> errors:
     </h2>
     <div class="panel-body">
      <ul>
       <% @user.errors.full_messages.each do |msg|%>
        <li><%= msg %></li>
       <% end %>
      </ul>
     </div>
    </div>
   </div>
  </div>
 </div>
 <% end %>

<div class="row">
 <div class="col-xs-12">
  <%= form_for(@user, :html => {class: "form-horizontal", role: "form"}) do |f| %>
  <div class="form-group">
   <div class="control-label col-sm-2">
    <%= f.label :name %>
   </div>
   <div class="col-sm-6">
    <%= f.text_field :name, class: "form-control", placeholder: "Your Name", autofocus: true %>
   </div>
  </div>
  <div class="form-group">
   <div class="control-label col-sm-2">
    <%= f.label :email %>
   </div>
   <div class="col-sm-6">
    <%= f.text_field :email, class: "form-control", placeholder: "Your email", autofocus: true %>
   </div>
  </div>
  <div class="form-group">
   <div class="control-label col-sm-2">
    <%= f.label :password %>
   </div>
   <div class="col-sm-6">
    <%= f.password_field :password, class: "form-control", placeholder: "Minimum of 6 characters", autofocus: true %>
   </div>
  </div>
  <div class="form-group">
   <div class="control-label col-sm-2">
    <%= f.label :password_confirmation %>
   </div>
   <div class="col-sm-6">
    <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Must be same as above" %>
   </div>
  </div>
  <div class="form-group">
   <div class="col-sm-offset-2 col-sm-10">
    <%= f.submit class: 'btn btn-primary btn-large' %>
   </div>
  </div>
  <% end %>
 </div>
</div>
